---
layout: "layout.njk"
pagination:
  data: collections.overproofs
  size: 1
  alias: overproofGroup
permalink: "briefs/{{ overproofGroup.overproof.slug }}/index.html"
intent: case-study
tasks:
  - proof-record
  - precedent
reviewDate: 2024-12-01
eleventyComputed:
  title: "{{ (overproofGroup.overproof and overproofGroup.overproof.brief and overproofGroup.overproof.brief.headline) or (overproofGroup.overproof and overproofGroup.overproof.title) or 'Case Brief' }} — Case Brief"
  description: "{{ (overproofGroup.overproof and overproofGroup.overproof.brief and overproofGroup.overproof.brief.lede) or (overproofGroup.overproof and overproofGroup.overproof.summary) or '' }}"
---
<div class="content-page" style="background: var(--paper);">
  <div class="align-container">
    {% set overproofGroup = overproofGroup or {} %}
    {% set overproof = overproofGroup.overproof or {} %}
    {% set brief = overproof.brief or null %}
    {% set proofsInGroup = (overproofGroup.proofs | isArray) and overproofGroup.proofs or [] %}
    <nav aria-label="Breadcrumb" class="breadcrumb">
      <ol>
        <li><a href="{{ '/' | url }}">Home</a></li>
        <li><a href="{{ '/overproofs/' | url }}">Overproofs</a></li>
        <li aria-current="page">{{ overproofGroup.overproof.title }}</li>
      </ol>
    </nav>

    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "BreadcrumbList",
        "itemListElement": [
          {
            "@type": "ListItem",
            "position": 1,
            "name": "Home",
            "item": "{{ site.url }}"
          },
          {
            "@type": "ListItem",
            "position": 2,
            "name": "Overproofs",
            "item": "{{ site.url }}{{ '/overproofs/' | url }}"
          },
          {
            "@type": "ListItem",
            "position": 3,
            "name": "{{ overproof.title }}",
            "item": "{{ site.url }}{{ page.url | url }}"
          }
        ]
      }
    </script>

    {% set overproofGroup = overproofGroup or {} %}
    {% set overproof = overproofGroup.overproof or {} %}
    {% set brief = overproof.brief or null %}
    {% set proofsInGroup = (overproofGroup.proofs | isArray) and overproofGroup.proofs or [] %}

    {% for proofEntry in proofsInGroup %}
      {% set proofSlug = (proofEntry.slug or proofEntry.case_id) | slug %}
      {% set proofCanonicalPath = '/proofs/' + (overproof.slug or '') + '/' + proofSlug + '/' %}
      {% set proofCanonicalUrl = site.url ~ (proofCanonicalPath | url) %}
      {% set shareImage = site.url ~ '/share/' ~ proofSlug ~ '-facebook.png' %}
      {% set proof = proofEntry %}
      {% set canonicalUrl = proofCanonicalUrl %}
      {% set imageUrlOverride = shareImage %}
      {% include "structured-data-proof.njk" %}
    {% endfor %}

    <header class="overproof-hero">
      <div class="overproof-hero__content">
        <p class="section-label">Case Brief</p>
        <h1 class="overproof-hero__title">{{ (brief and brief.headline) or overproof.title or overproof.short_title or 'Case Brief' }}</h1>

        {% set heroSummary = (brief and brief.lede) or (overproof and overproof.summary) or '' %}
        {% if heroSummary %}
        <p class="lead overproof-hero__lede">{{ heroSummary }}</p>
        {% endif %}

        {% if overproof.narrative %}
        <div class="overproof-narrative rich-text">
          {{ overproof.narrative | safe }}
        </div>
        {% endif %}
      </div>

      <div class="overproof-hero__aside">
        <div class="overproof-stat-card">
          <span class="overproof-stat-card__label">Proofs documented</span>
          <span class="overproof-stat-card__value">{{ overproof.proofCount or (proofsInGroup | length) }}</span>
          <span class="overproof-stat-card__footnote">Across this record</span>
        </div>

        {% if overproof.metadata %}
        <div class="overproof-meta-card">
          <h2 class="overproof-meta-card__title">Record Metadata</h2>
          <dl class="overproof-metadata">
            {% for key, value in overproof.metadata %}
            <div class="overproof-metadata__item">
              <dt class="overproof-metadata__term">{{ key }}</dt>
              <dd class="overproof-metadata__definition">{{ value }}</dd>
            </div>
            {% endfor %}
          </dl>
        </div>
        {% endif %}
      </div>
    </header>

    {% if overproof.key_points and (overproof.key_points | length) %}
    <section class="overproof-section overproof-key-points" aria-labelledby="overproof-key-points-heading">
      <h2 id="overproof-key-points-heading">Key Findings</h2>
      <ul class="overproof-key-points__list">
        {% for point in overproof.key_points %}
        <li>{{ point }}</li>
        {% endfor %}
      </ul>
    </section>
    {% endif %}

    {% set briefViolations = (brief and brief.violations and (brief.violations | isArray)) and brief.violations or [] %}
    {% if briefViolations | length %}
    <section class="overproof-section brief-violations" aria-labelledby="brief-violations-heading">
      <div class="overproof-section__header">
        <h2 id="brief-violations-heading">Documented Violations</h2>
        <p class="overproof-section__meta">{{ briefViolations | length }} incidents traced in this record</p>
      </div>
      <div class="violation-grid">
        {% for violation in briefViolations %}
        <article class="violation-card">
          <h3>{{ violation.title }}</h3>
          {% if violation.keyEvidence %}
          <blockquote class="violation-card__quote">
            <p>{{ violation.keyEvidence }}</p>
          </blockquote>
          {% endif %}
          {% if violation.summary %}
          <p class="violation-card__summary">{{ violation.summary }}</p>
          {% endif %}
          {% if violation.consequence %}
          <p class="violation-card__consequence pill pill--warning"><span>Consequence</span>{{ violation.consequence }}</p>
          {% endif %}
          {% if violation.evidencePoints and violation.evidencePoints | length %}
          <ul class="violation-card__list">
            {% for point in violation.evidencePoints %}
            <li>{{ point }}</li>
            {% endfor %}
          </ul>
          {% endif %}
          {% if violation.proofs and violation.proofs | length %}
          <div class="brief-proof-links">
            <h4>Related proofs</h4>
            <ul class="brief-proof-links__list">
              {% for proof in violation.proofs %}
              <li>
                <a href="{{ '/proofs/' | url }}{{ overproof.slug }}/{{ proof.slug }}/" class="pill pill--muted" rel="noopener">{{ proof.title }}</a>
              </li>
              {% endfor %}
            </ul>
          </div>
          {% endif %}
        </article>
        {% endfor %}
      </div>
    </section>
    {% endif %}

    {% if brief and brief.conclusion %}
    <section class="overproof-section brief-conclusion">
      <h2>{{ brief.conclusion.headline }}</h2>
      <p>{{ brief.conclusion.summary }}</p>
    </section>
    {% endif %}

    <section class="overproof-section overproof-proofs" aria-labelledby="overproof-proofs-heading">
      <div class="overproof-section__header">
        <h2 id="overproof-proofs-heading">Proofs in this Record</h2>
        <p class="overproof-section__meta">{{ proofsInGroup | length }} curated proofs</p>
      </div>
      <div class="case-grid">
        {% for proof in proofsInGroup %}
        {% set proofSlug = proof.slug or proof.case_id or '' %}
        {% set proofOverproofSlug = (proof.overproof and proof.overproof.slug) or overproof.slug or '' %}
        {% set proofUrl = proofOverproofSlug and proofSlug and ('/proofs/' + proofOverproofSlug + '/' + proofSlug + '/') or '/archive/' %}
        <article class="case-card" data-proof-id="{{ proof.case_id }}">
          <div class="case-card__header">
            <h3 class="case-card__title"><a href="{{ proofUrl | url }}">{{ proof.title }}</a></h3>
            <p class="case-meta case-card__meta">
            {{ proof.case_id }} • {{ proof.date | date }}
            {% if proof.category %} • <span style="font-weight: 700;">{{ proof.category }}</span>{% endif %}
            </p>
          </div>
          <p class="case-card__summary">{{ proof.thesis }}</p>
          <a href="{{ proofUrl | url }}" class="case-link">Examine Proof →</a>
        </article>
        {% endfor %}
      </div>
    </section>

    <div class="overproof-actions">
      {% if brief and brief.nextBrief %}
      <a href="{{ (brief.nextBrief.url or ('/briefs/' + brief.nextBrief.slug + '/')) | url }}" class="btn btn-outline-blue">{{ brief.nextBrief.text }}</a>
      {% endif %}

      <a href="{{ '/overproofs/' | url }}" class="btn btn-outline-blue">Return to Overproofs</a>
      <a href="{{ '/archive' | url }}" class="btn btn-outline-blue">Proof Archive</a>
    </div>
  </div>
</div>
