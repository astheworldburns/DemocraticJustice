{
  "name": "democraticjustice",
  "version": "1.0.0",
  "description": "",
  "main": "bundle.js",
  "scripts": {
    "start": "eleventy --serve",
    "dev": "eleventy --serve",
    "build:js": "esbuild src/main.js --bundle --minify --outfile=bundle.js",
    "build:css": "postcss _site/style.css -o _site/style.css",
    "build:critical": "node scripts/generate-critical.js",
    "build:eleventy": "eleventy",
    "prebuild": "npm run build:js",
    "postbuild": "npm run build:critical && npm run build:eleventy && npm run build:css && npx pagefind --source _site",
    "build:verify": "node scripts/verify-build.js",
    "build:safe": "npm run prebuild && npm run build:eleventy && npm run postbuild && npm run build:verify || (echo 'Build failed' && exit 1)",
    "build": "npm run build:safe",
    "test": "playwright test",
    "test:dark": "playwright test tests/dark-mode.spec.js",
    "test:browsers": "playwright install --with-deps"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@11ty/eleventy": "^3.1.2",
    "@11ty/eleventy-img": "^6.0.4",
    "@sindresorhus/slugify": "^2.2.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.44.1",
    "autoprefixer": "^10.4.21",
    "critical": "^7.2.1",
    "cssnano": "^7.1.1",
    "esbuild": "^0.21.0",
    "html-minifier-terser": "^7.2.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "luxon": "^3.7.2",
    "pagefind": "^1.4.0",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1"
  }
}
