{
  "singleQuote": true,
  "trailingComma": "none",
  "tabWidth": 2,
  "printWidth": 100,
  "plugins": ["@shopify/prettier-plugin-liquid"],
  "overrides": [
    {
      "files": ["*.js", "src/**/*.js", "scripts/**/*.js", ".eleventy.js"],
      "options": {
        "tabWidth": 4
      }
    },
    {
      "files": ["**/*.njk"],
      "options": {
        "parser": "liquid-html",
        "singleQuote": false,
        "printWidth": 100
      }
    },
    {
      "files": ["_includes/**/*.html"],
      "options": {
        "parser": "html"
      }
    }
  ]
}
